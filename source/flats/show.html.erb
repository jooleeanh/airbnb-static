<% flat = data.flats[owner] %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path flat.flat_picture %>); height: 80vh; background-position: top;">
</div>

<div class="header-flat">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
        <div class="card-profile">
          <div class="card-profile">
            <%= image_tag flat.owner_picture, class: "img-circle avatar avatar-md" %>
            <%= flat.owner_name %>
          </div>
          <div class="card-profile-details">
            <%= flat.flat_name %>
            <%= flat.owner_city %>
            <% flat.rating.times do %>
            <i class="fa fa-star fa-lg" aria-hidden="true"></i>
            <% end %>
            <% (5 - flat.rating).times do %>
            <i class="fa fa-star-o fa-lg" aria-hidden="true"></i>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
      </div>
    </div>
  </div>
</div>
<div class="header-description">
</div>
<%= image_tag flat.owner_picture, class: "img-circle avatar avatar-lg avatar-bordered" %>
<p><%= flat.owner_name %></p>
<h1><%= flat.flat_description %></h1>
<p><%= flat.owner_city %></p>
